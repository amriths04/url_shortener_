<!DOCTYPE html>
<html>
<head>
    <title>URL Shortener</title>
   
    <style>
        body {
            background-color: #E0E0E2;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 80%;
            max-width: 600px;
            text-align: center;
        }

        h1 {
            color: blue;
            margin-bottom: 20px;
        }

        h2 {
            color: grey;
            margin-bottom: 10px;
        }

        form {
            margin-bottom: 20px;
        }

        input[type="text"] {
            padding: 10px;
            width: calc(100% - 22px);
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        input[type="submit"] {
            padding: 10px 20px;
            background-color: #721817;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        ul {
            text-align: left;
            margin: 0 auto 20px auto;
            padding: 0;
            list-style-position: inside;
            max-width: 600px;
        }

        li {
            margin: 5px 0;
        }

        a {
            color: #721817;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to URL Shortener</h1>
        <form action="/api/url" method="POST">
            <input type="text" name="longURL" placeholder="Enter the long URL" required>
            <input type="submit" value="Shorten URL">
        </form>
        <h2>Shortened URLs</h2>
        <ul>
            <% if (urls && urls.length) { %>
                <% urls.forEach(url => { %>
                    <li>
                        <a href="<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %></a>  - Shortened URL: <a href="/<%= url.shortID %>" target="_blank">/<%= url.shortID %></a>
                    </li>
                <% }) %>
            <% } else { %>
                <li>No URLs found</li>
            <% } %>
        </ul>
    </div>
</body>
</html>
